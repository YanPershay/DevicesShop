@model ShopCartViewModel

<div class="container">
    @foreach(var item in Model.ShopCart.ListShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Device: </b>@item.Device.Name<br />
            <b>Price: </b>$@item.Device.Price<br />
        </div>
    }
    <hr/>
    <div class="btn btn-danger" asp-controller="Order">Pay</div>
</div>
