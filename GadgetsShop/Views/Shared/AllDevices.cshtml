@model Device

<div class="col-lg-4">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <h4>@Model.Name</h4>
    <p>@Model.ShortDesc</p>
    <p>Price: $@Model.Price</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="Index" asp-route-id="@Model.Id">Add to cart</a></p>
</div>
